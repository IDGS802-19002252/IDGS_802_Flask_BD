{% extends 'layout.html' %}

{% block content %}
{% from '_macro.html' import render_field %}
<div class="container">
  <div class="row">
    <form action="/ABCompleto" method="post">
      <div class="row control-group">
        <div class="form-group col-xs-12 float-label-form-group controls">
          {{ render_field(form.nombre, class="form-control") }}
        </div>
      </div>
      <div class="row control-group">
        <div class="form-group col-xs-12 float-label-form-group controls">
          {{ render_field(form.apellidos, class="form-control") }}
        </div>
      </div>
      <div class="row control-group">
        <div class="form-group col-xs-12 float-label-form-group controls">
          {{ render_field(form.email, class="form-control") }}
        </div>
      </div>
      <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
      <input type="submit" id="modificar" name="modificar" value="Modificar" class="btn btn-warning">
      <a href="/ABCompleto" class="btn btn-success">Regresar</a>
    </form>
    <h3>Alumnos IDGS</h3>
    <table class="table table-striped table-bordered">
      <thead>
        <tr class="tr-head">
          <th>#</th>
          <th>Nombre</th>
          <th>Apellidos</th>
          <th>Correo</th>
          <th>Eliminar</th>
          <th>Modificar</th>
        </tr>
      </thead>
      <tbody>
        {% for alumno in alumnos %}
        <tr>
          <td>{{ alumno.id }}</td>
          <td>{{ alumno.nombre }}</td>
          <td>{{ alumno.apellidos }}</td>
          <td>{{ alumno.email }}</td>
          <td>
            <a href="/eliminar?id={{alumno.id}}" class="btn btn-danger">
              <i class="icon-remove icon-white"></i>
            </a>
          </td>
          <td>
            <a href="/modificar?id={{alumno.id}}" class="btn btn-warning">
              <i class="icon-pencil icon-white"></i>
            </a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock content %}