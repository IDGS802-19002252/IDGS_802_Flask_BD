{% extends 'layout.html' %}

{% block content %}
{% from '_macro.html' import render_field %}
<div class="container">
  <div class="row">
    <form action="/modificar" method="post">
      <div class="row control-group">
        <div class="form-group col-xs-12 float-label-form-group controls">
          {{ render_field(form.nombre, class="form-control") }}
        </div>
      </div>
      <div class="row control-group">
        <div class="form-group col-xs-12 float-label-form-group controls">
          {{ render_field(form.apellidos, class="form-control") }}
        </div>
      </div>
      <div class="row control-group">
        <div class="form-group col-xs-12 float-label-form-group controls">
          {{ render_field(form.email, class="form-control") }}
        </div>
      </div>
      <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
      <input type="submit" id="modificar" name="modificar" value="Modificar">
      <input type="hidden" name="id" value="{{form.id.data}}">
      <a href="/ABCompleto" class="btn btn-success">Regresar</a>
    </form>
  </div>
</div>
{% endblock content %}